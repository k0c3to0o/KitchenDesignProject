@model KitchenDesignProject.Models.Home.ContactViewModel
@{
    ViewBag.Title = "Contact";
}
@using MyResources = KitchenDesignProject.Resources.KitchenDesign;



<section class="breadcrumbs">
    <div class="row">
        <div class="span12 clearfix">
            <div class="page-header">
                <h1>@MyResources.ContactUs<small></small></h1>
            </div>
        </div>
    </div>
</section>
<!-- end: Page header / Breadcrumbs -->

<div class="row">

    <!-- start: Page section -->
    <section id="page-sidebar" class="span12">

        <div class="row-fluid main-row">
            <div class="span12">
                <div class="gmap"><iframe class="" width="100%" height="350" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2940.568971032981!2d27.459175999999992!3d42.52196699999999!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zNDLCsDMxJzE5LjEiTiAyN8KwMjcnMzMuMCJF!5e0!3m2!1sbg!2s!4v1426413862270"></iframe></div>
            </div>
        </div>

        <div class="row-fluid">
            <div class="span8">
                <h2>@MyResources.LeaveYourMessage</h2>
                @*<div class="row-fluid">
                        <p>Curabitur turpis elit, imperdiet a lacinia consequat, posuere in nisi. Etiam sed egestas lacus. Maecenas nec massa quis metus sollicitudin pellentesque in eget purus. Mauris in nibh vel tellus congue tincidunt et non nibh. Nunc sed odio sed felis accumsan scelerisque. Donec sit amet tempor purus. Nunc cursus tortor eu ipsum tincidunt vitae elementum arcu fringilla. Cras consequat tincidunt nisi nec convallis.</p>
                    </div>*@

                @using (Html.BeginForm("Contact", "Home", FormMethod.Post, new { @class = "af-form", id = "af-form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <div class="row-fluid">
                        <div class="af-outer af-required">
                            <div class="af-inner">
                                @Html.TextBoxFor(model => model.Name, new { @class = "text-input span12 placeholder", placeholder = "Name", id = "name", @size = "30" })
                                @Html.ValidationMessageFor(model => model.Name)
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="af-outer af-required">
                            <div class="af-inner">
                                @Html.TextBoxFor(model => model.Email, new { @class = "text-input span12 placeholder", placeholder = "Email", id = "email", @size = "30" })
                                @Html.ValidationMessageFor(model => model.Email)
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid">

                        <div class="af-outer af-required">
                            <div class="af-inner">
                                @Html.TextAreaFor(model => model.Comment, 0, 30, new { @class = "text-input span12 placeholder", placeholder = "Message", id = "input-message" })
                                @Html.ValidationMessageFor(model => model.Comment)
                            </div>
                        </div>

                    </div>
                    <div class="row-fluid">
                        <div class="af-outer af-required">
                            <div class="af-inner">
                                @AppHelpers.Submit("Send Message!", "submit_btn", "btn btn-primary")
                            </div>
                        </div>
                    </div>
                }

            </div>
            <div class="span4">
                <section>
                    <h3>@MyResources.ContactInfo</h3>
                    <address>
                        <ul class="icons">
                            <li><i class="icon-map-marker"></i> <strong>@MyResources.Address:</strong> Street Name 432/2, London, 90210</li>
                            <li><i class="icon-phone"></i> <strong>@MyResources.Phone1:</strong> (123) 456-7890</li>
                            <li><i class="icon-print"></i> <strong>@MyResources.Phone2:</strong> (123) 456-7890</li>
                            <li><i class="icon-envelope"></i> <strong>@MyResources.Email:</strong> <a href="mailto:#">info@email.com</a></li>
                            <li><i class="icon-time"></i> <strong>Business Hour:</strong></li>
                            <li class="clearfix">Monday - Fiyday: 9 am  to 6 pm</li>
                            <li class="clearfix">Saturday: 10 am  to 4 pm</li>
                            <li class="clearfix">Sunday: Closed</li>
                        </ul>
                    </address>
                </section>
            </div>
        </div>

    </section>
    <!-- end: Page section -->

</div>